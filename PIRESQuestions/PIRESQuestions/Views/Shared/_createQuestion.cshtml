@model Question

<div class="container">
    <form asp-action="CreateQuestion" asp-controller="Question" id="formCreateQuestion">
        <input type="hidden" asp-for="FormId" id="inputFormId" />
        <div class="col-md-6 mb-3">
            <label asp-for="Label" class="form-label">Question :</label>
            <input type="text" asp-for="Label" class="form-control" id="inputLabel" placeholder="Saisissez la question...">
            <span asp-validation-for="Label" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Description" class="form-label">Description :</label>
            <input type="text" asp-for="Description" class="form-control" id="inputDescription" placeholder="Saisissez la description...">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="mb-3 form-check form-check-inline" >
                    <input class="form-check-input" type="checkbox" value="1,2" id="YesNo">
                    <label class="form-check-label">Yes/No</label>              
                </div>
                <div class="mb-3 form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" value="3" id="unconcerned">
                    <label class="form-check-label">unconcerned</label>
                </div>
                <div class="mb-3 form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" value="4,5,6,7,8,9" id="NumCheck">
                    <label class="form-check-label"> valeur 0 à 5 </label>
                </div>
            </div>
        </div> 
        <button id="sendQuestionButton" class="btn btn-success">Envoyer</button>
        <button id="cancelQuestionButton" class="btn btn-danger">Annuler</button>
    </form>
</div>

<script>
    var yesNoCheckbox = document.querySelector('#YesNo');
    var numCheckbox = document.querySelector('#NumCheck');
    yesNoCheckbox.addEventListener('change', numCheckBoxDisabled);
    numCheckbox.addEventListener('change', YesNoCheckBoxDisabled);

    function numCheckBoxDisabled(event) {
        var numCheckbox = document.querySelector('#NumCheck');
        var yesNoCheckbox = document.querySelector('#YesNo');
        numCheckbox.disabled = event.target.checked; 
    }

    function YesNoCheckBoxDisabled(event) {
        var numCheckbox = document.querySelector('#NumCheck');
        var yesNoCheckbox = document.querySelector('#YesNo');
        yesNoCheckbox.disabled = event.target.checked;
    }

</script>